<% if request.errors.any? %>
  <div class="errors">
    <%= request.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= form_with model: request do |f| %>

  <%= f.label :name %> </br>
  <%= f.text_field :name %> </br>

  <%= f.label :email %> </br>
  <%= f.text_field :email %> </br>

  <%= f.label :phone_number %> </br>
  <%= f.telephone_field :phone_number %> </br>

  <%= f.label :biography %> </br>
  <%= f.text_area :biography %> </br>

  <%= f.submit %>
<% end %>

<style>
  .field_with_errors {
      background-color: red;
      display: inline-block;
      color: #fff;
  }
  .errors {
      background-color: red;
      color: #fff;
      display: inline-block;
      border-radius: 4px;
      padding: 1em;
  }
</style>